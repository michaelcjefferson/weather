@import 'normalize'

// MAIN
//-----------------------------------------------------------------------------
*
  text-align: center
  box-sizing: border-box
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

.container
  background: #222
  color: #eee
  height: 100vh
  width: 100%

.main
  width: 100%
  height: 100%
  display: flex
  flex-flow: column

// WEATHER INFO
//-----------------------------------------------------------------------------
.weather-info
  flex-grow: 1
  overflow: hidden
  display: flex
  align-items: center
  justify-content: center
  position: relative
  cursor: context-menu

.center
  flex-basis: 50%
  display: flex
  flex-direction: column
  align-items: center
  justify-content: space-around
  .placename
    font-size: 30px
    width: 80%
  .temperature
    margin: 100px 0
    display: flex
    align-items: center
    justify-content: center
    .temperature-number
      font-size: 300px
    .temperature-unit
      font-size: 120px
  .weather-description
    font-size: 30px

.cloud
  flex-basis: 25%
  font-size: 25px

.humidity
  flex-basis: 25%
  font-size: 25px

// UNIT SELECTOR
//-----------------------------------------------------------------------------
.unit-selector
  position: fixed
  width: 5rem
  height: 5rem
  font-size: 30px
  color: #eee
  z-index: 10
  background: none
  border: none
  left: 0
  outline: none

// BACKGROUND
//-----------------------------------------------------------------------------
.background-picture
  position: fixed
  background-size: cover
  background-position: center
  height: 100%
  width: 100%
  -webkit-filter: brightness(.8)
  -moz-filter: brightness(.8)
  -ms-filter: brightness(.8)
  filter: brightness(.8)

// .forecast-logo
//   position: fixed
//   bottom: 0
//   left: 0

.google-logo
  position: fixed
  bottom: 0
  right: 0

// SEARCH BAR
//-----------------------------------------------------------------------------
.search-bar
  right: 0
  top: 0
  position: relative
  width: 100%
  display: inline-block

.search-field,.search-submit
  height: 5rem

.search-field
  position: absolute
  right: 0
  -webkit-transition: all 0.5s ease-in-out
  transition: all 0.5s ease-in-out
  background-color: rgba(black, .5)
  border: none
  border-bottom: 1px solid rgba(white, .5)
  box-sizing: border-box
  color: rgba(white, .5)
  cursor: pointer
  font-size: 3rem
  font-weight: 300
  opacity: 0
  padding-right: 5rem
  width: 0
  z-index: 3
  text-align: right
  &:focus
    cursor: text
    opacity: 1
    outline: none
    width: 100%
    z-index: 15
    ~ .search-submit
      z-index: 20
    ~ .prediction-list
      position: relative
      display: flex
      flex-flow: column
      top: 0
      background: rgba(black, .5)
      z-index: 20
      width: 100%
      text-align: right
      padding: 0
    &:hover
      ~ .search-submit .fa-search
        color: white
  &:hover
  ~ .search-submit .fa-search
    color: rgba(white, .8)

.search-submit
  -webkit-transition: all 0.2s ease-in-out
  transition: all 0.2s ease-in-out
  background-color: transparent
  border: none
  outline: none
  float: right
  position: relative
  width: 5rem
  z-index: 2
  &:hover
    .fa-search
      color: rgba(white, .8)

.fa-search
  -webkit-transition: all 0.2s ease-in-out
  transition: all 0.2s ease-in-out
  color: white
  font-size: 3rem

.prediction-list
  background: none
  display: none

.prediction-list-hidden
  background: none
  display: none

.inactive-prediction
  border-bottom: 1px solid rgba(white, .5)
  width: 100%
  height: 5rem
  list-style: none
  color: rgba(white, .5)
  display: flex
  align-items: center
  justify-content: center
  font-size: 3rem
  font-weight: 300
  cursor: pointer

.active-prediction
  background: rgba(white, .8)
  border-bottom: 1px solid rgba(white, .5)
  width: 100%
  height: 5rem
  color: rgba(black, .7)
  list-style: none
  display: flex
  align-items: center
  justify-content: center
  font-size: 3rem
  font-weight: 300
  cursor: pointer

// MEDIA QUERIES
//-----------------------------------------------------------------------------
@media (max-width: 720px)
  .center
    .placename
      font-size: 24px
    .temperature
      .temperature-number
        font-size: 240px
      .temperature-unit
        font-size: 96px
    .weather-description
      font-size: 24px
  .cloud
    font-size: 20px
  .humidity
    font-size: 20px

@media (max-width: 480px)
  .center
    .placename
      font-size: 18px
    .temperature
      .temperature-number
        font-size: 180px
      .temperature-unit
        font-size: 72px
    .weather-description
      font-size: 18px
  .cloud
    font-size: 15px
  .humidity
    font-size: 15px

@media (max-height: 640px)
  .center
    .temperature
      margin: 0
